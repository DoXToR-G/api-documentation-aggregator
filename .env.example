# Database Configuration
DATABASE_URL=postgresql://api_user:password@localhost:5432/api_docs_db

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=true

# AI API Keys (Optional - for AI-powered features)
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# External API Provider Keys (Optional - for documentation fetching)
ATLASSIAN_API_TOKEN=your-atlassian-api-token
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=api_docs

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Application Settings
LOG_LEVEL=INFO
MAX_CONVERSATION_HISTORY=100
AI_RESPONSE_TIMEOUT=30
ENABLE_CONVERSATION_LOGGING=true

# Documentation Update Intervals (in minutes)
UPDATE_INTERVAL_ATLASSIAN=1440  # Daily
UPDATE_INTERVAL_DATADOG=720      # Twice daily
UPDATE_INTERVAL_KUBERNETES=1440  # Daily
